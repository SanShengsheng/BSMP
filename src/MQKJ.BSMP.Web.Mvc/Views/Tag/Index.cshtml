@using MQKJ.BSMP.Web.Startup
@using MQKJ.BSMP;
@using X.PagedList
@using X.PagedList.Mvc.Core
@using Microsoft.AspNetCore.Internal
@using Microsoft.EntityFrameworkCore.Internal
@model MQKJ.BSMP.Web.Models.Tags.TagListViewModel
@{
    ViewBag.CurrentPageName = PageNames.Tags; // The menu item will be active for this page.
    var snStart = ((Model.Tags.PageNumber - 1) * Model.Tags.PageSize);
}
@section scripts
    {
    <script src="~/view-resources/Views/Tags/Tag.js" asp-append-version="true"></script>
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("Tags")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                @Html.PagedListPager((IPagedList)Model.Tags, page => Url.Action("Index", new { page }))
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("Id")</th>
                            <th>@L("TagName")</th>
                            <th>@L("TagTypeName")</th>
                            <th>@L("Sort")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in Model.Tags)
                        {
                            <tr>
                                <td>@(Model.Tags.IndexOf(tag) + snStart + 1)</td>
                                <td>@tag.TagName</td>
                                <td>@tag.TagType.TypeName</td>
                                <td>@tag.Sort</td>

                                <td class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="#" class="waves-effect waves-block edit-tag" data-tag-id="@tag.Id" data-toggle="modal" data-target="#tagEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                        <li><a href="#" class="waves-effect waves-block delete-tag" data-tag-id="@tag.Id" data-tag-name="@tag.TagName"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager((IPagedList)Model.Tags, page => Url.Action("Index", new { page }))
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="#tagCreateModal">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="tagCreateModal" tabindex="-1" role="dialog" aria-labelledby="tagCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("CreateTitle").FormatString(L("Tags"))</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="tagCreateForm" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="tagName" type="text" name="TagName" required class="validate form-control">
                                    <label for="tagName" class="form-label">@L("TagName")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="sort" type="number" name="Sort" required class="validate form-control">
                                    <label for="sort" class="form-label">@L("Sort")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-group">
                                    @Html.Label(L("TagType"))
                                    @Html.DropDownList(
                                        "TagTypeId",
                                        Model.TagTypes,
                                        new
                                        {
                                            @class = "form-control",
                                            id = "tagTypeCombobox"
                                        })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="button" id="submitbtn" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="tagEditModal" tabindex="-1" role="dialog" aria-labelledby="tagEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
