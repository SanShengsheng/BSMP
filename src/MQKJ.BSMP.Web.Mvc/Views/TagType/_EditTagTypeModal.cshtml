@using MQKJ.BSMP.Web.Models.Common.Modals
@using MQKJ.BSMP
@model MQKJ.BSMP.TagTypes.Dtos.TagTypeListDto

@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditTitle").FormatString(L("TagType"))))
<div class="modal-body">
    <form name="tagTypeEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="TagTypeName" type="text" name="TypeName" value="@Model.TypeName" required maxlength="50" minlength="2" class="validate form-control">
                        <label for="TagTypeName" class="form-label">@L("TagTypeName")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Code" type="text" name="Code" value="@Model.Code" class="validate form-control">
                        <label for="Code" class="form-label">@L("Code")</label>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/view-resources/Views/Tags/_EditTagType.js" asp-append-version="true"></script>
