@using MQKJ.BSMP.Web.Startup
@using X.PagedList
@using MQKJ.BSMP.Players
@model StaticPagedList<MQKJ.BSMP.Players.Dtos.PlayerListDto>
@{
    ViewBag.CurrentPageName = PageNames.Players; // The menu item will be active for this page.

    @section scripts
        {
        <script src="~/view-resources/Views/Players/Index.js" asp-append-version="true"></script>
        <script src="~/lib/laydate/laydate.js" asp-append-version="true"></script>
    }
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">

                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>刷新</a></li>

                        </ul>
                    </li>
                </ul>
                <div class="row" id="QuestionFilterDiv">
                    <form style="position:relative" name="questionListQueryForm" role="form" novalidate class="form-validation">
                        <div class="col-sm-11">
                            <div class="form-line">
                                <label style="margin-right:8px;" class="">昵称</label>
                                <input id="nickName" type="text" name="nickName" class="form-inline">

                                <label style="margin-left:15px;margin-right:8px;" class="">性别</label>
                                <select id="gender" class="col-sm-offset-2" name="gender">
                                    <option value="">不限</option>
                                    <option value="@Convert.ToInt32(PlayerGender.Man)">男</option>
                                    <option value="@Convert.ToInt32(PlayerGender.WoMan)">女</option>
                                </select>

                                <label style="margin-left:15px;margin-right:8px;" class="">年龄层</label>
                                <select id="ageRange" class="col-sm-1" name="ageRange">
                                    <option value="">不限</option>
                                    <option value="@Convert.ToInt32(PlayerAgeRange.Student)">20以下</option>
                                    <option value="@Convert.ToInt32(PlayerAgeRange.Worker)">20~28</option>
                                    <option value="@Convert.ToInt32(PlayerAgeRange.Other)">28以上</option>
                                </select>

                                <label style="margin-left:15px;margin-right:8px;" for="starttime" class="form-label">授权登录时间</label>
                                <input id="starttime" type="text" name="starttime" readonly="readonly" class="form-inline">
                                <label for="endtime" class="form-label">至</label>
                                <input id="endtime" type="text" name="endtime" readonly="readonly" class="form-inline">
                            </div>
                        </div>
                        <button style="position:absolute;right:20%;top:-8px;" type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float " id="SearchBtn">
                            <i class="material-icons">search</i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="body table-responsive" id="playerList">
                @Html.Partial("_List")
            </div>
        </div>
    </div>
</div>


