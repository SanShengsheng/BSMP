@using MQKJ.BSMP.Web.Startup
@using MQKJ.BSMP;
@using MQKJ.BSMP.EnumHelper
@using MQKJ.BSMP.Common.MqAgents;
@using MQKJ.BSMP.Common.MqAgents.Agents.Dtos;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.CurrentPageName = PageNames.AgentFamilyManage; // The menu item will be active for this page.
}

@section scripts{
    <script src="~/view-resources/Views/AgentFamily/Index.js"></script>
    <script src="~/lib/laydate/laydate.js"></script>
}

<div class="row clearfix" id="loadingModal">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    代理家庭管理
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>刷新</a></li>
                            <li><a id="ExportToExcel" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">edit</i>导出到Excel</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="row clearfix" id="searchform">
                <form role="form" novalidate class="form-validation">
                    <div class="col-sm-11">
                        <div class="form-group user-style">
                            <label style="margin-left:15px;margin-right:8px;" for="nickName" class="form-label">代理昵称或姓名</label>
                            <input id="nickName" type="text" name="nickName" style="width:130px" class="form-inline">
                            <label style="margin-left:15px;margin-right:8px;" for="phone" class="form-label">手机号</label>
                            <input id="phone" type="text" value="" name="phone" style="width:120px" class="form-inline">
                            <label style="margin:0px 15px 0px 15px;" for="starttime" class="form-label">从</label>
                            <input id="startTime" type="text" value="" name="starttime" readonly="readonly" style="width:120px" class="form-inline">
                            <label style="margin:0px 8px 0px 8px;" class="form-label">至</label>
                            <input id="endTime" type="text" value="" name="endtime" readonly="readonly" style="width:120px" class="form-inline">
                            <label style="margin-left:15px;margin-right:8px;" for="tasktype" class="form-label">排序</label>
                            <select id="sorting" name="sorting" class="col-sm-2">
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.Default)">默认</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.NewCreateFamilyWay)">按新建家庭数量</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.NewRechargeFamilyWay)">按新充值家庭数量</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.FamilyRechargeWay)">按老家庭充值数量</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.RepeatRechargeFamily)">按重复充值家庭数量</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.NewFamilyWaterRunWay)">按新家庭流水</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.FamilyWaterRunWay)">按老家庭流水</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.RechargeInversionRateWay)">按充值转化率</option>
                                <option value="@EnumHelper.GetDescription(AgentFamilyOrderWay.PerCustomerTransactionWay)">按客单价</option>
                            </select>
                            <label style="margin-left:15px;margin-right:8px;" for="tasktype" class="form-label">升降序</label>
                            <select id="SortingType" name="agentState" class="col-sm-2">
                                <option value="@EnumHelper.GetDescription(OrderType.DescendingOrder)">降序</option>
                                <option value="@EnumHelper.GetDescription(OrderType.AscendingOrder)">升序</option>
                            </select>
                            <label style="margin-left:15px;margin-right:8px;" for="nickName" class="form-label">公司名称</label>
                            <input id="companyName" type="text" name="companyName" style="width:130px" class="form-inline">
                            <button style="margin-left:20px;" type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float " id="searchBtn">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div id="dataList" class="body table-responsive">
                @Html.Partial("_List")
            </div>
        </div>
    </div>
</div>