@using MQKJ.BSMP.Web.Startup
@using MQKJ.BSMP;
@using MQKJ.BSMP.EnumHelper
@using MQKJ.BSMP.Common.MqAgents;
@*@model List<MQKJ.BSMP.Common.MqAgents.Agents.Dtos.GetCompaniesDtos>*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.CurrentPageName = PageNames.AgentManage; // The menu item will be active for this page.
}

@section scripts{
    <script src="~/view-resources/Views/Agents/agent.js"></script>
    <script src="~/lib/laydate/laydate.js"></script>
}

<div class="row clearfix" id="loadingModal">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    代理管理
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>刷新</a></li>
                            @*<li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">add</i>导入事件数据</a></li>*@
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="row clearfix" id="searchform">
                <form role="form" novalidate class="form-validation">
                    <div class="col-sm-11">
                        <div class="form-group user-style">
                            <label style="margin-left:15px;margin-right:8px;" for="nickName" class="form-label">用户昵称</label>
                            <input id="nickName" type="text" name="nickName" style="width:130px" class="form-inline">
                            <label style="margin-left:15px;margin-right:8px;" for="tasktype" class="form-label">状态</label>
                            <select id="agentState" name="agentState" class="col-sm-2">
                                <option value="0">不限</option>
                                <option value="@AgentState.UnAuditing.GetHashCode()">未审核</option>
                                <option value="@AgentState.Audited.GetHashCode()">已审核</option>
                                <option value="@AgentState.Suspend.GetHashCode()">冻结</option>
                            </select>
                            <label style="margin-left:15px;margin-right:8px;" for="tasktype" class="form-label">代理等级</label>
                            <select id="agentLevel" name="agentLevel" class="col-sm-2">
                                <option value="0">不限</option>
                                <option value="@AgentLevel.FirstAgentLevel.GetHashCode()">@EnumHelper.GetDescription(AgentLevel.FirstAgentLevel)</option>
                                <option value="@AgentLevel.FirstPromoterLevel.GetHashCode()">@EnumHelper.GetDescription(AgentLevel.FirstPromoterLevel)</option>
                                <option value="@AgentLevel.SecondLevel.GetHashCode()">@EnumHelper.GetDescription(AgentLevel.SecondLevel)</option>
                            </select>
                            <label style="margin:0px 15px 0px 15px;" for="starttime" class="form-label">从</label>
                            <input id="startTime" type="text" value="" name="starttime" readonly="readonly" style="width:120px" class="form-inline">
                            <label style="margin:0px 8px 0px 8px;" class="form-label">至</label>
                            <input id="endTime" type="text" value="" name="endtime" readonly="readonly" style="width:120px" class="form-inline">
                            <label style="margin:0px 8px 0px 8px;" class="form-label">备注</label>
                            <input id="sourceName" type="text" value="" name="sourceName" style="width:120px" class="form-inline"><br />
                            <label style="margin-left:15px;margin-right:8px;" for="phone" class="form-label">手机号</label>
                            <input id="phone" type="text" value="" name="phone" style="width:120px" class="form-inline">
                            <label style="margin-left:15px;margin-right:8px;" for="upperNickName" class="form-label">上级代理昵称</label>
                            <input id="upperNickName" type="text" value="" name="upperNickName" style="width:120px" class="form-inline">

                            <label style="margin-left:15px;margin-right:8px;" for="promoterWithdrawalRatio" class="form-label">推广提现比例</label>
                            <input id="promoterWithdrawalRatio" type="text" value="" name="promoterWithdrawalRatio" style="width:120px" class="form-inline">

                            <label style="margin-left:15px;margin-right:8px;" for="agentWithdrawalRatio" class="form-label">代理提现比例</label>
                            <input id="agentWithdrawalRatio" type="text" value="" name="agentWithdrawalRatio" style="width:120px" class="form-inline">

                            <label style="margin-left:15px;margin-right:8px;" for="company" class="form-label">所属公司</label>
                            <input id="company" type="text" value="" name="company" style="width:120px" class="form-inline">

                            <button style="margin-left:20px;" type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float " id="searchBtn">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div id="dataList" class="body table-responsive">
                @Html.Partial("_List")
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="setRatioModal" tabindex="-1" role="dialog" aria-labelledby="setRatioModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">设置提现比例</h4>
            </div>
            <div class="modal-body">
                <form name="setRatioForm" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="number" id="selectType" name="selectType" class="form-control" required onkeyup="">
                                    <label class="form-label">设置比例</label>
                                    @*<label style="margin-left:15px;margin-right:8px;" for="tasktype" class="form-label">设置比例</label>
                                        <input type="number" id="selectType" max="2" onkeyup="this.value=this.value.replace(/\D/g,'')" />*@
                                    @*<select id="selectType" class="col-sm-3">
                                            <option>50%</option>
                                            <option>40%</option>
                                            <option>30%</option>
                                            <option>20%</option>
                                            <option>10%</option>
                                        </select>*@
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="text" value="" id="agentType" style="display:none" />
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary waves-effect" value="" id="setagentRatio">添加</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="setSourceModal" tabindex="-1" role="dialog" aria-labelledby="setSourceModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">设置备注</h4>
            </div>
            <div class="modal-body">
                <form name="setRatioForm" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" id="SourceName" name="selectType" class="form-control" required onkeyup="">
                                    <label class="form-label">备注</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="text" value="" id="agentType" style="display:none" />
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary waves-effect" value="" id="setSources">添加</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="setCompanyModal" tabindex="-1" role="dialog" aria-labelledby="setCompanyModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form name="setCompany" role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select id="companyList" class="col-sm-3">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="text" value="" id="agentId" style="display:none" />
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">取消</button>
                        <button type="button" class="btn btn-primary waves-effect" id="submitSetCompany">确定</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
