                                        <div class="form-line">
                                            <label for="add_APPID">小程序APPID</label>
                                            <input type="text" id="add_APPID" name="AppId" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_bannerImage">Banner图</label>
                                            <input type="text" id="add_bannerImage" name="BannerImagePath" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
