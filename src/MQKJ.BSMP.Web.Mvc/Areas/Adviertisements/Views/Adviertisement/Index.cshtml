                                            <input type="text" id="add_WordLink" name="WordLink" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="MinPorgramLogo">小程序logo</label>
                                            <input type="text" id="MinPorgramLogo" name="MinPorgramLogo" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_MinPorgramQR">小程序码</label>
                                            <input type="text" id="add_MinPorgramQR" name="MinPorgramQRPath" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_ExpandPath">路径</label>
                                            <input type="text" id="add_ExpandPath" name="ExpandPath" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_Publink">公众号链接</label>
                                            <input type="text" id="add_Publink" name="PubLink" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_AdState">广告位状态</label>
                                            <select id="add_AdState" name="AdviertisementState" class="form-control">
                                                <option value="@AdviertisementState.Normal.GetHashCode()">@EnumHelper.GetDescription(AdviertisementState.Normal)</option>
                                                <option value="@AdviertisementState.Close.GetHashCode()">@EnumHelper.GetDescription(AdviertisementState.Close)</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_adPlatform">广告位所属平台</label>
                                            <select id="add_adPlatform" name="AdviertisementPlatform" class="form-control">
                                                <option value="@AdviertisementPlatform.WeChat.GetHashCode()">@EnumHelper.GetDescription(AdviertisementPlatform.WeChat)</option>
                                                <option value="@AdviertisementPlatform.XiaoMeng.GetHashCode()">@EnumHelper.GetDescription(AdviertisementPlatform.XiaoMeng)</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_adApplication">广告位所属应用</label>
                                            <select id="add_adApplication" name="TenantId" class="form-control">
                                                @foreach (var item in Model.Tenants)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label for="add_EndTime">结束时间</label>
                                            <input type="text" id="endTime" name="endTime" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">取消</button>
                    <button type="button" id="saveBtn" class="btn btn-primary waves-effect" value="">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="AdEditModal" tabindex="-1" role="dialog" aria-labelledby="AdEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>




