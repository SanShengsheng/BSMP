@using MQKJ.BSMP.Web.Startup
@using MQKJ.BSMP;
@using X.PagedList
@using X.PagedList.Mvc.Common;
@using X.PagedList.Mvc.Core
@using Microsoft.EntityFrameworkCore.Internal
@using MQKJ.BSMP.EnumHelper
@model MQKJ.BSMP.Web.Areas.Adviertisements.Models.AdviertisementModel

@{
//var snStart = ((Model.PageNumber - 1) * Model.PageSize);
}

    <table class="table">
        <thead>
            <tr>
                @*<th>序号</th>*@
                <th>名称</th>
                <th>APPID</th>
                <th>banner图</th>
                <th>插图</th>
                <th>悬浮图</th>
                <th>文字链</th>
                <th>小程序logo</th>
                <th>所属广告平台</th>
                <th>路径</th>
                <th>公众号链接</th>
                <th>小程序码</th>
                <td>所属程序</td>
                <td>结束时间</td>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.staticPagedList)
                {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.AppId</td>
                            <td>@item.BannerImagePath</td>
                            <td>@item.InsertImagePath</td>
                            <td>@item.FixedImagePath</td>
                            <td>@item.WordLink</td>
                            <td>@item.MinPorgramLogo</td>
                            <td>@item.AdviertisementPlatform</td>
                            <td>@item.PubLink</td>
                            <td>@item.MinPorgramQRPath</td>
                            <td>@item.Tenant.Name</td>
                            <td>@item.EndTime</td>
                            <td>@EnumHelper.GetDescription(item.AdviertisementState)</td>
                            <td class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#" class="waves-effect waves-block edit-ad" data-ad-id="@item.Id" data-toggle="modal" data-target="#AdEditModal"><i class="material-icons">edit</i>编辑</a></li>
                                    <li><a href="#" class="waves-effect waves-block delete-ad" data-ad-id="@item.Id" data-ad-name="@item.Name"><i class="material-icons">delete_sweep</i>删除</a></li>
                                </ul>
                            </td>
                        </tr>
                }
            }
        </tbody>
    </table>

@Html.PagedListPager((IPagedList)Model.staticPagedList, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
    {
        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
        DisplayLinkToLastPage = PagedListDisplayMode.Always,
        DisplayLinkToPreviousPage = PagedListDisplayMode.Never,
        DisplayLinkToNextPage = PagedListDisplayMode.Never,
        LinkToFirstPageFormat = "首页",
        LinkToLastPageFormat = "末页",
        DisplayPageCountAndCurrentLocation = true,
        PageCountAndCurrentLocationFormat = "每页" + Model.staticPagedList.Count() + "条共{1}页",
        //DisplayItemSliceAndTotal = true,
        //ItemSliceAndTotalFormat = "每页{1}条"
    })

<style type="text/css">
    .PagedList-pageCountAndLocation {
        position: absolute;
        right: 20px;
        /*color:red !important;*/
    }
    table tbody tr td{
        width:180px; height:51px; word-wrap:break-word; word-break:break-all
    }
</style>


