
@using MQKJ.BSMP.Web.Startup
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/lib/laydate/theme/default/laydate.css" asp-append-version="true" />
}
@section scripts
    {
    <script src="~/lib/laydate/laydate.js" asp-append-version="true"></script>
    <script src="~/lib/echarts/echarts.js"></script>
    <script src="~/view-resources/Views/GamblingModel/answerQuestion.js"></script>
    <script src="~/view-resources/Views/PassModel/bootstrap-paginator.min.js"></script>
}
@{
    ViewBag.CurrentPageName = PageNames.GamblingModel; // The menu item will be active for this page.
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    答题统计
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>刷新</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="row clearfix" id="searchform">
                <form role="form" novalidate class="form-validation">
                    <div class="col-sm-11">
                        <div class="form-group user-style">
                            <select id="timeselect">
                                <option value="1">做题数量</option>
                                <option value="2">累计做题</option>
                            </select>
                            <label style="margin:0px 15px 0px 15px;" for="starttime" class="form-label">从</label>
                            <input id="startTime" type="text" value="" name="starttime" readonly="readonly" class="form-inline">
                            <label style="margin:0px 8px 0px 8px;" class="form-label">至</label>
                            <input id="endTime" type="text" value="" name="endtime" readonly="readonly" class="form-inline">
                            <button style="margin-left:20px;" type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float " id="searchBtn">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="container-fluid">
                <div id="answerQuestionChart" style="width: 100%;height:400px;"></div>
            </div>
            <div id="dataList" class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>时间</th>
                            <th>开局次数</th>
                            <th>继续闯关次数</th>
                            <th>三题关/五题关/十题关次数</th>
                            <th>普通/暗昧/情侣/夫妻次数</th>
                            <th>线上约定/线下约定次数</th>
                        </tr>
                    </thead>
                    <tbody id="answerquestions"></tbody>
                </table>
            </div>
            <div id="example" style="text-align: center"> <ul id="pageLimit"></ul> </div>
        </div>
    </div>
</div>
</div>


